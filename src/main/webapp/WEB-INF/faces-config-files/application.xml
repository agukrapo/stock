<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="1.2"
              xmlns="http://java.sun.com/xml/ns/javaee"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd">
    <application>
        <view-handler>ar.com.ak.util.CustomFaceletViewHandler</view-handler>
        <action-listener>ar.com.ak.util.CustomActionListener</action-listener>
        <message-bundle>i18n.MessageBundle</message-bundle>
        <lifecycle>
            <phase-listener>ar.com.ak.util.CustomPhaseListener</phase-listener>
        </lifecycle>
        <locale-config>
            <default-locale>es</default-locale>
            <supported-locale>es</supported-locale>
        </locale-config>
    </application>
</faces-config>